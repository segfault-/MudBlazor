@namespace MudBlazor
@inherits MudComponentBase
@typeparam T

<ul @attributes="UserAttributes" class="@Classname" style="@Stylename">
    <CascadingValue Value="@MudTreeRoot" IsFixed="true">
        @if (ItemTemplate != null && Items != null)
        {
            <MudVirtualize IsEnabled="true" Items="@Items" OverscanCount="3" ItemSize="50f" Context="item">
                @ItemTemplate(item)
             </MudVirtualize>
        }
        else if (ChildContent != null)
        {
            @ChildContent
        }
    </CascadingValue>
</ul>